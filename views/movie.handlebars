<div class="main-container-content-movie-availablenow container-single-movie">

  <div class="movie-info-container">
    <img class="movie-poster" src="{{movie.attributes.image.url}}" />
    <div class="text-container">
      <h2 class="movie-title">{{movie.attributes.title}}</h2>
      <div class="movie-intro">
      {{#markdown movie.attributes.intro}}{{/markdown}}
      </div>
    </div>
  </div>

  <div id="review-post-section"></div>
  <div id="review-comment-section"> </div>
  <div id="review-btn-section"> </div>
</div>